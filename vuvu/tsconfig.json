{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "allowJs": true,
        "outDir": "./dist/",
        "typeRoots": ["../shared.types.ts"], 
        "paths": {
            "shared": ["../shared.types.ts"],
        }
    },
    "include": [
        "./src/**/*", "../shared.types.ts"
    ],
    "exclude": ["node_modules"]
}